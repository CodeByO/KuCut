<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Spinner
        android:id="@+id/collegeSpinner"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"

        android:background="@drawable/spinner_background"
        android:spinnerMode="dialog"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단과대 아이콘"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="18dp" />

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="342dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="146dp" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="342dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="252dp" />

    <Spinner
        android:id="@+id/departmentSpinner"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"

        android:background="@drawable/spinner_background"
        android:spinnerMode="dialog"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="352dp" />

    <EditText
        android:id="@+id/editTextTextPersonName8"
        android:layout_width="342dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="457dp" />

    <EditText
        android:id="@+id/editTextTextPersonName9"
        android:layout_width="342dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="566dp" />

    <TextView
        android:id="@+id/title_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학과"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="210dp" />

    <TextView
        android:id="@+id/title_studentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학번"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="317dp" />

    <TextView
        android:id="@+id/title_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="422dp" />

    <TextView
        android:id="@+id/title_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="531dp" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:text="Button"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="642dp" />

    <ImageButton
        android:id="@+id/btn_show_password"
        android:layout_width="30dp"
        android:layout_height="22dp"
        app:srcCompat="@android:drawable/ic_menu_view"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="531dp" />

</androidx.constraintlayout.widget.ConstraintLayout>